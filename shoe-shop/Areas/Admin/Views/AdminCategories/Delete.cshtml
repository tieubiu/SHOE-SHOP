@model OnlineMarket.Models.Category

@{
    ViewData["Title"] = "Xác nhận xóa danh mục - " + Model.CatName;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <a asp-area="Admin" asp-controller="AdminCategories" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Danh sách danh mục</a>
            <span class="breadcrumb-item active">Chi tiết danh mục: @Model.CatName</span>
        </nav>
    </div>
</div>
<div class="page-header no-gutters has-tab">
    <div class="d-md-flex m-b-15 align-items-center justify-content-between">
        <div class="media align-items-center m-b-15">
            <div class="avatar avatar-image rounded" style="height: 70px; width: 70px">
                <img src="~/images/categories/@Model.Thumb" alt="@Model.Title" />
            </div>
            <div class="m-l-15">
                <h4 class="m-b-0">@Model.CatName</h4>
                <p class="text-muted m-b-0">ID: #@Model.CatId</p>
            </div>
        </div>
        @* <div class="m-b-15">
                <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminPages" asp-route-id="@Model.PageId">asdasd</a>
            </div>*@
    </div>
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#product-overview">Tổng quát</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#product-images">Hình đại diện</a>
        </li>
    </ul>
</div>
<div class="container-fluid">
    <div class="tab-content m-t-15">
        <div class="tab-pane fade show active" id="product-overview">
            <form asp-action="Delete" asp-route-id="@Model.CatId">
                <input type="hidden" asp-for="CatId" />
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">XÁC NHẬN XÓA DANH MỤC - @Model.CatName.ToUpper()</h4>
                        <div class="table-responsive">
                            <table class="product-info-table m-t-20">
                                <tbody>
                                    <tr>
                                        <td>Tên danh mục</td>
                                        <td class="text-dark font-weight-semibold">@Model.CatName</td>
                                    </tr>
                                    <tr>
                                        <td>Alias</td>
                                        <td>@Model.Alias</td>
                                    </tr>
                                    <tr>
                                        <td>Trạng thái</td>
                                        <td>
                                            <div class="check-box">
                                                <input asp-for="Published" type="checkbox" disabled />
                                                <label for="Published">Công khai</label>
                                            </div>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Thông tin Mô tả</h4>
                    </div>
                    <div class="card-body">
                        @Html.Raw(Model.Description)
                    </div>
                </div>
                <div>
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                </div>
            </form>
        </div>

        <div class="tab-pane fade" id="product-images">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <img class="img-fluid" src="~/images/categories/@Model.Thumb" alt="@Model.Title"></img>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



